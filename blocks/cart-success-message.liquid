
<div class="shopify-block--cart-success-message flex row gap-xs middle center spacing-2xs" {{ block.shopify_attributes }}>
  {% render 'icon', icon: 'check' %}
  <p class="small">{{ block.settings.message }}</p>
</div>

{% schema %}
{
  "name": "Cart success message",
  "tag": null,
  "settings": [
    {
      "type": "text",
      "id": "message",
      "label": "Message",
      "default": "The Product was added."
    }
  ],
  "presets": [
    {
      "name": "Cart success message"
    }
  ]
}
{% endschema %}
