<div class="flex row wrap space-between spacing-bottom-xs">
  <p class="h6">{{ "cart.subtotal" | t }}</p>
  <p class="h6">{{ cart.items_subtotal_price | money }}</p>
</div>
<div class="cart-discount-applications spacing-bottom-xs">
  {% for discount_application in cart.cart_level_discount_applications %}
    <div class="discount-application flex row middle space-between">
      <div class="flex row middle discount-application-title">
        {% render 'icon', icon: 'discount', size: "18px" %}
        <p class="small">{{ discount_application.title }} </p>
      </div>
      <p class="small">-{{ discount_application.total_allocated_amount | money }}</p>
    </div>
  {% endfor %}
</div>
<div class="flex row wrap space-between">
  <p class="h6">{{ "cart.total" | t }}</p>
  <p class="h6">{{ cart.total_price | money }}</p>
</div>
<div class="flex row wrap right spacing-bottom-xs">
  <p class="small">
  {% if cart.taxes_included %}
    {{ "cart.incl_vat" | t }}
  {% else %}
    {{ "cart.excl_vat" | t }}
  {% endif %}
  </p>
</div>
{% if cart.requires_shipping %}
  <div class="flex row wrap space-between spacing-bottom-xs">
    <p class="small">{{ "cart.shipping" | t }}</p>
    <p class="small">
      &nbsp;{{ "cart.calculated_at_checkout" | t }}
    </p>
  </div>
{% endif %}

{% schema %}
{
  "name": "Cart Summary",
  "tag": null,
  "settings": [
    
  ],
  "presets": [
    {
      "name": "Cart Summary"
    }
  ]
}
{% endschema %}
