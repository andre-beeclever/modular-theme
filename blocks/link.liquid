<div class="shopify-block--link spacing-bottom-{{ block.settings.spacing_bottom }}" {{ block.shopify_attributes }}>
  <a
    href="{{ block.settings.link }}"
    class="{{ block.settings.button_style }} 
    {% if block.settings.small %}btn--small{% endif %} 
     {% if block.settings.full_width %}btn--full{% endif %}"
    {%- if block.settings.open_in_new_tab -%}
      target="_blank" rel="noopener noreferrer"
    {%- endif -%}>
    {% if block.settings.icon != blank %}
      {% render 'icon', icon: block.settings.icon %}
    {% endif %}
    {% if block.settings.label != blank %}
      <span>
        {{ block.settings.label }}
      </span>  
    {% endif %}
  </a>
</div>



{% schema %}
{
  "name": "Link",
  "tag": null,
  "settings": [
    {
      "type": "url",
      "id": "link",
      "label": "Link"
    },
    {
      "type": "select",
      "id": "icon",
      "label": "Icon",
      "options": [
        {
          "value": "",
          "label": "Select an icon"
        },
        {
          "value": "close",
          "label": "Close"
        },
        {
          "value": "cart",
          "label": "Cart"
        }
      ],
      "default": ""
    },
    {
      "type": "text",
      "id": "label",
      "label": "Label",
      "default": "Button label"
    },
    {
      "type": "select",
      "id": "button_style",
      "label": "Style",
      "options": [
        {
          "value": "btn btn--primary",
          "label": "Primary"
        },
        {
          "value": "btn btn--secondary",
          "label": "Secondary"
        },
        {
          "value": "btn btn--tertiary",
          "label": "Tertiary"
        },
        {
          "value": "link",
          "label": "Link"
        },
        {
          "value": "",
          "label": "plain"
        }
      ],
      "default": "btn btn--primary"
    },
    {
      "type": "checkbox",
      "id": "small",
      "label": "Small",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "full_width",
      "label": "Full width",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "open_in_new_tab",
      "label": "Open this link in a new window",
      "default": false
    },
    {
      "type": "select",
      "id": "spacing_bottom",
      "label": "Spacing bottom",
      "options": [
        { "value": "none", "label": "none" },
        { "value": "2xs", "label": "2xs" },
        { "value": "xs", "label": "xs" },
        { "value": "s", "label": "s" },
        { "value": "m", "label": "m" },
        { "value": "l", "label": "l" },
        { "value": "xl", "label": "xl" },
        { "value": "2xl", "label": "2xl" },
        { "value": "3xl", "label": "3xl" }
      ],
      "default": "none"
    }
  ],
  "presets": [
    {
      "name": "Button (link)",
      "settings": {
        "label": "Link label",
        "button_style": "link"
      }
    },
    {
      "name": "Button (primary)",
      "settings": {
        "label": "Primary button label",
        "button_style": "btn btn--primary"
      }
    },
    {
      "name": "Button (secondary)",
      "settings": {
        "label": "Secondary button label",
        "button_style": "btn btn--secondary"
      }
    },
    {
      "name": "Button (tertiary)",
      "settings": {
        "label": "Tertiary button label",
        "button_style": "btn btn--tertiary"
      }
    }
  ]
}
{% endschema %}
