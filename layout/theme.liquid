<!doctype html>
<html
  class="no-js"
  lang="{{ request.locale.iso_code }}">
  <head>
    <meta charset="utf-8">
    <meta
      http-equiv="X-UA-Compatible"
      content="IE=edge">
    <meta
      name="viewport"
      content="width=device-width,initial-scale=1">
    <meta
      name="theme-color"
      content="">
    {% if settings.cart_mode == "drawer" and request.path == routes.cart_url %}
      <script>
        const url = new URL(location);
        url.searchParams.set('cart', 'open');
        url.pathname = "{{ routes.root_url }}";
        location.href = url.href;
      </script>
    {% endif %}
    <link rel="canonical" href="{{ canonical_url }}">
    <link rel="preconnect" href="https://cdn.shopify.com" crossorigin>

    <meta
      name="viewport"
      content="width=device-width, initial-scale=1">
    <link rel="preconnect" href="https://cdn.shopify.com">

    <title>
      {{ page_title }}
      {%- if current_tags %} &ndash; tagged "{{ current_tags | join: ", " }}"{% endif -%}
      {%- if current_page != 1 %} &ndash; Page {{ current_page }}{% endif -%}
      {%- unless page_title contains shop.name %} &ndash; {{ shop.name }}{% endunless -%}
    </title>

    {% if page_description %}
      <meta
        name="description"
        content="{{ page_description | escape }}">
    {% endif %}

    {{ content_for_header }}

    {% render "preload-fonts" %}

    {% render "theme-styles" %}
    {% render "theme-js" %}
    
    {{ "critical.css" | asset_url | stylesheet_tag }}

    <script
      defer
      src="{{ 'utils.js' | asset_url }}"></script>
    <script
      defer
      src="{{ 'embla-carousel.umd.js' | asset_url }}"></script>
    <script
      defer
      src="{{ 'embla-slider-component.js' | asset_url }}"></script>
    <link rel="stylesheet" href="{{ 'embla-slider-component.css' | asset_url }}">
    <link rel="stylesheet" href="{{ 'embla-slider-component-skin.css' | asset_url }}">

    <script
      type="module"
      src="{{ 'theme-select.js' | asset_url }}"></script>
    <link rel="stylesheet" href="{{ 'theme-select.css' | asset_url }}">

    <script
      type="module"
      src="{{ 'collapsible.js' | asset_url }}"></script>
    <link rel="stylesheet" href="{{ 'collapsible.css' | asset_url }}">

    <script
      type="module"
      src="{{ 'quantity-rocker.js' | asset_url }}"></script>
    <link rel="stylesheet" href="{{ 'quantity-rocker.css' | asset_url }}">
    <script
      type="module"
      src="{{ 'theme-popup.js' | asset_url }}"></script>
    <link rel="stylesheet" href="{{ 'theme-popup.css' | asset_url }}">

    <script
      type="module"
      src="{{ 'cart.js' | asset_url }}"></script>
    <script
      type="module"
      src="{{ 'cart-form.js' | asset_url }}"></script>
    <link rel="stylesheet" href="{{ 'cart-form.css' | asset_url }}">


    {% assign skin = "modern" %}
    {% case skin %}
      {% when "modern" %}
        {{ "modern-skin.css" | asset_url | stylesheet_tag }}
      {% when "minimal" %}
        {{ "minimal-skin.css" | asset_url | stylesheet_tag }}
    {% endcase %}
  </head>

  <body>
    {% sections "header-group" %}

    {% if settings.cart_mode == "drawer" %}
      {% section "cart-drawer" %}
    {% endif %}
    {% if settings.cart_add == "notification" %}
        {% render 'cart-notification-template' %}
    {% endif %}

    <main
      id="MainContent"
      class="content-for-layout focus-none"
      role="main"
      tabindex="-1">
      {{ content_for_layout }}
    </main>

    {% sections "footer-group" %}

    {% render "seo-global" %}
  </body>
</html>
