<theme-modal
  id="cart-modal"
  class="shopify-block--modal {{ section.settings | class_list }} {{ section.settings.overflow }} color-{{ section.settings.color_scheme }}">
  {% content_for "blocks" %}
</theme-modal>

{% if request.design_mode %}
  <script>
    window.addEventListener("shopify:section:select", (e) => {
      if(e.detail.sectionId == "{{ section.id }}"){
        window.dispatchEvent(new CustomEvent("modal:open", { detail: { id: 'cart-modal' } }))
      }
    })
    window.addEventListener("shopify:section:deselect", (e) => {
      if(e.detail.sectionId == "{{ section.id }}"){
        window.dispatchEvent(new CustomEvent("modal:close", { detail: { id: 'cart-modal' } }))
      }
    })
  </script>
{% endif %}


{% schema %}
{
  "name": "Cart modal",
  "tag": "section",
  "blocks": [{ "type": "@theme" }, { "type": "@app" }],
  "settings": [
    {
      "type": "header",
      "content": "Overflow"
    },
    {
      "type": "select",
      "id": "overflow",
      "label": "Overflow",
      "options": [
        {
          "value": "",
          "label": "visible"
        },
        {
          "value": "overflow-hidden",
          "label": "hidden"
        },
        {
          "value": "overflow-scroll",
          "label": "scroll"
        }
      ],
      "default": ""
    },
    {
      "type": "style.size_panel",
      "id": "size",
      "label": "Size",
      "default": {
        "width": "auto",

        "@media (--mobile)": {
          "width": "100%"
        }
      }
    },
    {
      "type": "style.spacing_panel",
      "id": "spacing",
      "label": "Spacing"
    },
    {
      "type": "style.layout_panel",
      "id": "layout",
      "label": "Layout",
      "default": {
        "flex-direction": "row",
        "gap": "20px",
        "justify-content": "center",
        "align-items": "center",
        "@media (--mobile)": {
          "flex-wrap": "wrap"
        }
      }
    },
    {
      "type": "header",
      "content": "Color"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "Advanced"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Name",
      "default": "Modal",
      "info": "Name the container to identify it in the theme editor."
    }
  ],
  "presets": [
    {
      "name": "Cart modal"
    }
  ]
}
{% endschema %}
