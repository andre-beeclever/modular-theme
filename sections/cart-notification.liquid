<theme-notification id="cart-notification" hide-after="10000">
  <div class="flex row middle gap-xs spacing-m">
    <p>{{ section.settings.message }}</p>
    <a href="{{ routes.cart_url }}" class="link">anzeigen</a>
    <theme-modal-button class="">
      {% render 'icon', icon: 'close' %}
    </theme-modal-button>
  </div>
</theme-notification>

{% schema %}
  {
    "name": "Cart notification",
    "settings": [
      {
        "type": "text",
        "id": "message",
        "label": "Message",
        "default": "Das Produkt wurde zu deinem Warenkorb hinzugef√ºgt.",
        "info": "The message shown to the customer."
      }
    ]
  }
{% endschema %}
