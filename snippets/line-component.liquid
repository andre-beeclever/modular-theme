
<div class="flex row line-component gap-s">
  <div class="line-component-image">
    {% render 'image-element', image: component.image, aspect_ratio: 1, fit: 'cover', sizes: "100px" %}
  </div>
  <div class="flex row between full-width">
    <div class="flex col between">
      <div class="flex col">
        <p class="p spacing-bottom-2xs">{{ component.product.title }}</p>
        {% unless component.product.has_only_default_variant %}
          <div class="flex row middle line-component-options spacing-bottom-2xs">
            {% for option in component.variant.options %}
              {% assign option_name = component.product.options_with_values[forloop.index0].name %}
              <p class="small">
                <span>{{ option_name }}</span>:&nbsp;<span>{{ option.name }}</span>
              </p>
              {% unless forloop.last %}
                <div class="line-component-divider"></div>
              {% endunless %}
            {% endfor %}
          </div>
        {% endunless %}
      </div>
    </div>
  </div>
</div>