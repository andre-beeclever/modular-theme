{
  "compilerOptions": {
      "lib": ["es5", "es2015.promise", "dom", "es2015"],
      "target": "es6",
      "typeRoots": [
        "node_modules/@types"
      ],
      "isolatedModules": true,
      "module": "es2015",
      "moduleResolution": "node",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true,
      "declaration": false,
      "sourceMap": true
  },
  "exclude": [
      "node_modules"
  ]
}